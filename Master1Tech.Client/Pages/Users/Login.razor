@page "/user/login"
@inject Services.IUserService UserService
@inject IAlertService AlertService
@inject CustomAuthStateProvider AuthProvider
@inject NavigationManager navManager
@inject Master1Tech.Client.Shared.PageHistoryState PageHistoryState
@inject ILocalStorageService LocalStorageService
@layout MainLayout

<div class="col-md-6 offset-md-3 mt-5">
    <div class="card">
        <h4 class="card-header">Login</h4>
        <div class="card-body">
            <EditForm Model="@loginModel" OnValidSubmit="OnValidSubmit">
                <DataAnnotationsValidator />
                <div class="form-group">
                    <label>Username</label>
                    <InputText @bind-Value="loginModel.Username" id="username" class="form-control" />
                    <ValidationMessage For="@(() => loginModel.Username)" />
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <InputText @bind-Value="loginModel.Password" type="password" id="password" class="form-control" />
                    <ValidationMessage For="@(() => loginModel.Password)" />
                </div>
                <br />
                <button disabled="@loading" class="btn btn-primary" id="login_button">
                    @if (loading) 
                    {
                        <span class="spinner-border spinner-border-sm mr-1"></span>
                    }
                    Login
                </button>
            </EditForm>
        </div>
    </div>
</div>

@code {

    private Master1Tech.Client.Shared.Login loginModel = new Master1Tech.Client.Shared.Login();
    private bool loading;
    private ILocalStorageService _localStorageService;

    private async void OnValidSubmit()
    {
        // reset alerts on submit
        AlertService.Clear();

        loading = true;
        try
        {
            
            await UserService.Login(loginModel);
            var user = await LocalStorageService.GetItem<User>("user");
            var returnUrl = navManager.QueryString("returnUrl") ?? "";
            if (returnUrl != string.Empty)
            {
                navManager.NavigateTo(returnUrl);
            }
            else if (user.Username== null){
                AlertService.Error("Username or Password not matched");
                loading = false;
                StateHasChanged();
                return;
            }
                else{
                if (PageHistoryState.CanGoBack()){
                    navManager.NavigateTo(PageHistoryState.GetGoBackPage());
                }
                else{
                    navManager.NavigateTo($"/getintouch-list/1");


                }
            }
        }
        catch (Exception ex)
        {
            AlertService.Error(ex.Message);
            loading = false;
            StateHasChanged();
        }
    }
}
